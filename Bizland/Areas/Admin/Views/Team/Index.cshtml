@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model List<Team>
@{
    int count =0;
}
<div class="content-wrapper">
          <div class="row">
           
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Catagories</h4>
                  
                  <a asp-action="create" asp-controller="team" class="btn btn-success">Create Catogory</a>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                           No
                          </th>
                          <th>
                           Name
                          </th>
                          <th>
                            Product Count
                          </th>
                         
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                                {
                        count++;
                        <tr>
                          <td >
                           @count
                          </td>
                          <td>
                            @item.Name
                          </td>
                          <td>
                            @item.Title
                          </td>
                         <td>
                          <img src="~/assets/img/@item.Image"/>  
                          </td>
                          <td>
                              <a asp-action="update" asp-controller="team" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                         <a class="btn btn-primary">Read</a>
                        <a asp-action="delete" asp-controller="team" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                     </td>
                        </tr>
                      
                                }
                      
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>